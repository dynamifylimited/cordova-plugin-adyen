<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-android-adyen"
		version="0.0.1"
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns="http://apache.org/cordova/ns/plugins/1.0">
	<name>Adyen</name>
	<js-module name="Adyen"
			   src="www/adyen.js">
		<clobbers target="cordova.plugins.adyen" />
	</js-module>
	<platform name="android">
		<config-file target="res/xml/config.xml" parent="/*">
		  <preference name="GradlePluginKotlinEnabled" value="true" />
		  <preference name="GradlePluginKotlinCodeStyle" value="official" />
		  <preference name="GradlePluginKotlinVersion" value="1.9.23" />
			<feature name="Adyen">
				<param name="android-package" value="com.dynamify.plugin.adyen.Adyen"/>
			</feature>
		</config-file>
		 <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <activity android:label="New Activity" android:name="com.dynamify.plugin.adyen.NewActivity"  android:theme="@style/AppTheme"></activity>
        </config-file>
		<source-file src="src/android/Adyen.kt" target-dir="src/main/kotlin/Adyen" />
		<source-file src="src/android/NewActivity.kt" target-dir="src/main/kotlin/Adyen" />
		<source-file src="src/android/ExampleDropInService.kt" target-dir="src/main/kotlin/Adyen" />
        <source-file src="src/android/activity_new.xml" target-dir="res/layout"/>
		<framework src="src/android/build.gradle" custom="true" type="gradleReference" />
	</platform>

	<!-- iOS platform configuration -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="Adyen">
                <param name="ios-package" value="Adyen" />
            </feature>
        </config-file>
        <source-file src="src/ios/Adyen.swift" />
		<source-file src="src/ios/InitialDataFlowProtocolV1.swift" />
		<source-file src="src/ios/PresenterExampleProtocol.swift" />
		 <podspec>
            <pods use-frameworks="true">
                <pod name="Adyen" />
            </pods>
        </podspec>
    </platform>
</plugin>
